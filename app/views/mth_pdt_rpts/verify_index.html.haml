- provide(:title, t('.title'))


.text-success
  = flash[:info]
.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "list", text:  @factory.name + "-" + t(controller_name + "." + action_name + '.title')
      - content_for :card_body do
        .container-fluid
          .row
            .col-md-12
              %table.text-center.table-sm{:'data-toggle' => "table", :'data-id-table'=>"advancedTable", :"data-search" => "true",:'data-advanced-search'=>"true"}
                %thead
                  %tr
                    %th{:scope => "col"} #
                  
                    %th{:scope => "col"}
                      = Setting.mth_pdt_rpts.name
                    %th{:scope => "col"}
                      = Setting.mth_pdt_rpts.outflow
                    %th{:scope => "col"}
                      = Setting.mth_pdt_rpts.avg_outflow
                    %th{:scope => "col"}
                      = Setting.mth_pdt_rpts.end_outflow
                    %th{:scope => "col"}
                      进度
                    %th{:scope => "col"}
                      设置
                %tbody
                  - @mth_pdt_rpts.each_with_index do |mth_pdt_rpt, index|
                    %tr
                      %td{:scope => "row"}
                        = index+1
                    
                      %td
                        = mth_pdt_rpt.name
                      %td
                        = mth_pdt_rpt.outflow
                      %td
                        = mth_pdt_rpt.avg_outflow
                      %td
                        = mth_pdt_rpt.end_outflow
                      %td
                        - if mth_pdt_rpt.state == Setting.mth_pdt_rpts.complete
                          %span.text-success
                            = Setting.mth_pdt_rpts.complete_t
                        - elsif mth_pdt_rpt.state == Setting.mth_pdt_rpts.ongoing
                          %span.text-primary
                            = Setting.mth_pdt_rpts.ongoing_t
                        - elsif mth_pdt_rpt.state == Setting.mth_pdt_rpts.verifying
                          %span.text-info
                            = Setting.mth_pdt_rpts.verifying_t
                        - elsif mth_pdt_rpt.state == Setting.mth_pdt_rpts.rejected
                          %span.text-danger
                            = Setting.mth_pdt_rpts.rejected_t
                      %td
                        .container-fluid
                          .row.justify-content-center
                            = link_to "查看",  verify_show_factory_mth_pdt_rpt_path(idencode(@factory.id), idencode(mth_pdt_rpt.id)), :class => "button button-primary button-small mr-1" 
            .col-md-12.site-theme-paginate-wrapper.d-flex.justify-content-center.mt-3
              = paginate @mth_pdt_rpts, window: 2, left: 1, right: 1 
      = render "layouts/bootstrap/card"


