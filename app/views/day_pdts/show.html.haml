- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text:  @factory.name + "-" + t(controller_name + "." + action_name + '.title')
          - if @day_pdt.state == Setting.day_pdts.ongoing || @day_pdt.state == Setting.day_pdts.rejected
            = link_to "提交审核",  verifying_factory_day_pdt_path(idencode(@factory.id), idencode(@day_pdt.id)), :class => "button button-royal button-small pull-right mr-1" , :data => {:confirm => "确定提交审核?"}
            = link_to "编辑", edit_factory_day_pdt_path(idencode(@factory.id), idencode(@day_pdt.id)), :class => "button button-caution button-small pull-right mr-1" 
          = link_to "/factories/#{idencode(@factory.id)}/#{controller_name}", :class => "button button-small  pull-right button-primary mr-1" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-sm-12
              %h2.text-center
                = image_tag "gykg.jpg"
                = @day_pdt.name
            .col-2.offset-8
              %p
                = Setting.day_pdts.signer
                = @day_pdt.signer
            .col-sm-6.offset-3.p-5.border
              .col-sm-3.offset-7
                - if @day_pdt.state == Setting.day_pdts.complete
                  %h2.text-success.text-center.border.border-success
                    = Setting.day_pdts.complete_t
                - elsif @day_pdt.state == Setting.day_pdts.ongoing
                  %h2.text-primary.text-center.border.border-primary
                    = Setting.day_pdts.ongoing_t
                - elsif @day_pdt.state == Setting.day_pdts.verifying
                  %h2.text-info.text-center.border.border-info
                    = Setting.day_pdts.verifying_t
                - elsif @day_pdt.state == Setting.day_pdts.rejected
                  %h2.text-danger.text-center.border.border-danger
                    = Setting.day_pdts.rejected_t
              %table.table-bordered.day-pdt-table.w-100
                %caption.text-center
                  = Setting.inf_qlties.label
                %tbody
                  %tr
                    %td.p-3.text-center
                      = label_tag nil, Setting.inf_qlties.bod, :class => "text-center"
                    %td.p-3.text-center
                      = @day_pdt.inf_qlty.bod
                    %td.p-3.text-center
                      = label_tag nil, Setting.inf_qlties.cod, :class => "text-center"
                    %td.p-3.text-center
                      = @day_pdt.inf_qlty.cod
                    %td.p-3.text-center
                      = label_tag nil, Setting.inf_qlties.ss, :class => "text-center"
                    %td.p-3.text-center
                      = @day_pdt.inf_qlty.ss
                  %tr
                    %td.p-3.text-center
                      = label_tag nil, Setting.inf_qlties.nhn, :class => " text-center"
                    %td.p-3.text-center
                      = @day_pdt.inf_qlty.nhn
                    %td.p-3.text-center
                      = label_tag nil, Setting.inf_qlties.tn, :class => " text-center"
                    %td.p-3.text-center
                      = @day_pdt.inf_qlty.tn
                    %td.p-3.text-center
                      = label_tag nil, Setting.inf_qlties.tp, :class => " text-center"
                    %td.p-3.text-center
                      = @day_pdt.inf_qlty.tp
                  %tr
