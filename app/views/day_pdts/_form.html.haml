.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @day_pdt, :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @day_pdt.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@day_pdt.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @day_pdt.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.day_pdts.pdt_date, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.date_field :pdt_date, :class => "form-control rounded-0" , :required => true
          
        .form-group.row
          = f.label Setting.day_pdts.name, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.text_field :name, :class => "form-control rounded-0" , :required => true
          
        .form-group.row
          = f.label Setting.day_pdts.signer, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.text_field :signer, :class => "form-control rounded-0" , :required => true
          
        .form-group.row
          = f.label Setting.day_pdts.weather, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.text_field :weather, :class => "form-control rounded-0" 
          
        .form-group.row
          = f.label Setting.day_pdts.temper, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :temper, :class => "form-control rounded-0" 
          
        .form-group.row
          = f.label Setting.day_pdts.desc, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.text_area :desc, :class => "form-control rounded-0", :rows => "20" 
          
      
      
      
        .form-group.row
          = f.label "附图", :class => "col-3 text-right col-form-label col-form-label"
          .col-9
            .row
              = f.fields_for :enclosures do |enclosure|
                = render 'enclosure_fields', f: enclosure
              .links
                = link_to_add_association "添加文件", f, :enclosures, :class => "button button-small button-primary"
      
      
      
        .form-group.row
          = f.label Setting.inf_qlties.label, :class => "col-3  text-right col-form-label"
          .col-9
            .row
              = f.fields_for :inf_qlty do |inf_qlty|
                = render 'inf_qlty_fields', f: inf_qlty 
      
          .form-group.row
            = f.label Setting.eff_qlties.label, :class => "col-3  text-right col-form-label"
            .col-9
              .row
                = f.fields_for :eff_qlties do |eff_qlty|
                  = render 'eff_qlty_fields', f: eff_qlty 
      
          .form-group.row
            = f.label Setting.sed_qlties.label, :class => "col-3  text-right col-form-label"
            .col-9
              .row
                = f.fields_for :sed_qlties do |sed_qlty|
                  = render 'sed_qlty_fields', f: sed_qlty 
      
          .form-group.row
            = f.label Setting.pdt_sums.label, :class => "col-3  text-right col-form-label"
            .col-9
              .row
                = f.fields_for :pdt_sums do |pdt_sum|
                  = render 'pdt_sum_fields', f: pdt_sum 
      
        .form-group.row
          .col-3.offset-3
            = f.submit '保存', :class => "button  button-small button-action"
        -#
          .col-3.offset-1
            = link_to '返回', day_pdts_path, :class => "button button-small  button-caution"
