.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @emp_eff, :url => "/emp_effs/#{@emp_eff.id ? idencode(@emp_eff.id) : ''}", :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @emp_eff.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@emp_eff.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @emp_eff.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.emp_effs.pdt_time, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.datetime_select :pdt_time, :start_year => 2021, :order => [:year, :month, :day ], use_month_numbers: true, :class => "form-control rounded-0"
          
        .form-group.row
          = f.label Setting.emp_effs.cod, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :cod, :class => "form-control rounded-0" , :required => true, :step => "0.01"
          
        .form-group.row
          = f.label Setting.emp_effs.nhn, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :nhn, :class => "form-control rounded-0" , :required => true, :step => "0.01"
          
        .form-group.row
          = f.label Setting.emp_effs.tp, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :tp, :class => "form-control rounded-0" , :required => true, :step => "0.01"
          
        .form-group.row
          = f.label Setting.emp_effs.flow, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :flow, :class => "form-control rounded-0" , :required => true, :step => "0.01"
          
        .form-group.row
          = f.label Setting.emp_effs.ph, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :ph, :class => "form-control rounded-0" , :required => true, :step => "0.01"
          
        .form-group.row
          = f.label Setting.emp_effs.temp, :class => "col-sm-3 col-form-label text-right"
          .col-sm-6
            = f.number_field :temp, :class => "form-control rounded-0" , :required => true, :step => "0.01"
          
      
      
      
      
      
        .form-group.row
          .col-3.offset-3
            = f.submit '保存', :class => "button  button-small button-action"
        -#
          .col-3.offset-1
            = link_to '返回', emp_effs_path, :class => "button button-small  button-caution"
