                  = @mth_pdt_rpt.cmpy_mth_ipt.avg_val
              %tr
                %td.p-2.text-center
                  = Setting.smonth_ipts.yoy
                %td.p-2.text-center
                  = @mth_pdt_rpt.cmpy_mth_ipt.yoy
                %td.p-2.text-center
                  = Setting.smonth_ipts.mom
