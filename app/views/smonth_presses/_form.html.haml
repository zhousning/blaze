.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @smonth_press, :url => "/smonth_presses/#{@smonth_press.id ? idencode(@smonth_press.id) : ''}", :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @smonth_press.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@smonth_press.errors.count, "错误")}:"
            %ul
              - @smonth_press.errors.full_messages.each do |msg|
                %li= msg
        .row
          .col-sm-12
            %h2.text-center
              = image_tag "gykg.jpg"
          .col-md-8.offset-md-2.p-5.border
            #flash_explanation
            .card.border-0.mb-3.rounded-0
              .card-header.bg-transparent.border-success
                %h5
                  = Setting.smonth_presses.label
              .card-body
                %table.w-100.table-bordered.day-pdt-table
                  %tbody
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.smonth_presses.max_pres, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :max_pres, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_presses.min_pres, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :min_pres, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_presses.avg_pres, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :avg_pres, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.smonth_presses.max_date, :class => "text-center"
                      %td.p-2.text-center
                        = f.date_field :max_date, :class => "form-control" , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_presses.min_date, :class => "text-center"
                      %td.p-2.text-center
                        = f.date_field :min_date, :class => "form-control" , :required => true
                      
                    
          
          
          
          
          
            .form-group.row
              .col-3.offset-3
                = f.submit '保存', :class => "button  button-small button-action"
            -#
              .col-3.offset-1
                = link_to '返回', smonth_presses_path, :class => "button button-small  button-caution"
