- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to "/#{controller_name}", :class => "button button-small  pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
      - content_for :card_body do
        .container-fluid
          .row
            .col-sm-12
              %h2.text-center
                = image_tag "gykg.jpg"
            .col-md-8.offset-2.p-5.border
              .card.border-0.mb-3.rounded-0
                .card-header.bg-transparent.border-dark
                  %h5
                    = Setting.smonth_powers.label
                .card-body
                  %table.table-bordered.day-pdt-table.w-100.mb-3
                    %tbody
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.smonth_powers.power
                        %td.p-2.text-center
                          = @smonth_power.power
                    
                      
                        %td.p-2.text-center
                          = Setting.smonth_powers.end_power
                        %td.p-2.text-center
                          = @smonth_power.end_power
                    
                      
                        %td.p-2.text-center
                          = Setting.smonth_powers.bom
                        %td.p-2.text-center
                          = @smonth_power.bom
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.smonth_powers.end_bom
                        %td.p-2.text-center
                          = @smonth_power.end_bom
                    
                      
                        %td.p-2.text-center
                          = Setting.smonth_powers.avg_power
                        %td.p-2.text-center
                          = @smonth_power.avg_power
                    
                      
                        %td.p-2.text-center
                          = Setting.smonth_powers.yoy_bom
                        %td.p-2.text-center
                          = @smonth_power.yoy_bom
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.smonth_powers.mom_bom
                        %td.p-2.text-center
                          = @smonth_power.mom_bom
                    
                      
                        %td.p-2.text-center
                          = Setting.smonth_powers.yoy
                        %td.p-2.text-center
                          = @smonth_power.yoy
                    
                      
                        %td.p-2.text-center
                          = Setting.smonth_powers.mom
                        %td.p-2.text-center
                          = @smonth_power.mom
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.smonth_powers.ypdr
                        %td.p-2.text-center
                          = @smonth_power.ypdr
                    
              .row
              
              .row
              
              .row
              
              
              
      = render "layouts/bootstrap/card"
