.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @smonth_power, :url => "/smonth_powers/#{@smonth_power.id ? idencode(@smonth_power.id) : ''}", :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @smonth_power.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@smonth_power.errors.count, "错误")}:"
            %ul
              - @smonth_power.errors.full_messages.each do |msg|
                %li= msg
        .row
          .col-sm-12
            %h2.text-center
              = image_tag "gykg.jpg"
          .col-md-8.offset-md-2.p-5.border
            #flash_explanation
            .card.border-0.mb-3.rounded-0
              .card-header.bg-transparent.border-success
                %h5
                  = Setting.smonth_powers.label
              .card-body
                %table.w-100.table-bordered.day-pdt-table
                  %tbody
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.power, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :power, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.end_power, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :end_power, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.bom, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :bom, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.end_bom, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :end_bom, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.avg_power, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :avg_power, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.yoy_bom, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :yoy_bom, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.mom_bom, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :mom_bom, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.yoy, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :yoy, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.mom, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :mom, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.smonth_powers.ypdr, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :ypdr, :class => "form-control", :step => "any"  , :required => true
                      
                    
          
          
          
          
          
            .form-group.row
              .col-3.offset-3
                = f.submit '保存', :class => "button  button-small button-action"
            -#
              .col-3.offset-1
                = link_to '返回', smonth_powers_path, :class => "button button-small  button-caution"
