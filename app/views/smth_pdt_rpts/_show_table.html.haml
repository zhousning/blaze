.container-fluid
  .row
    .col-sm-12
      %h2.text-center
        = image_tag "gykg.jpg"
        = @mth_pdt_rpt.name
    .col-sm-8.offset-2.p-5.border
      .col-sm-5.offset-7
        %h2
          = render 'mth_pdt_rpts/state', :mth_pdt_rpt => @mth_pdt_rpt
      .row
        .col-12
          .form-group.row
            = Setting.mth_pdt_rpts.ecm_ans_rpt
            .col-sm-9
              - unless @mth_pdt_rpt.ecm_ans_rpt.blank?
                = link_to URI.decode(File.basename(@mth_pdt_rpt.ecm_ans_rpt_url)), download_append_factory_mth_pdt_rpt_path(idencode(@factory.id), idencode(@mth_pdt_rpt.id))

      %table.table-bordered.day-pdt-table.w-100
        %caption.text-center
          = Setting.smth_pdt_rpts.label
        %tbody
          %tr
            %td.p-2.text-center
              =  Setting.mth_pdt_rpts.design
            %td.p-2.text-center
              = @mth_pdt_rpt.design
          
            %td.p-2.text-center
              =  Setting.mth_pdt_rpts.outflow
            %td.p-2.text-center
              = @mth_pdt_rpt.outflow
          
          %tr
            %td.p-2.text-center
              =  Setting.mth_pdt_rpts.avg_outflow
            %td.p-2.text-center
              = @mth_pdt_rpt.avg_outflow
          
            %td.p-2.text-center
              =  Setting.mth_pdt_rpts.end_outflow
            %td.p-2.text-center
                  
      .card.border-0.mb-3.rounded-0
        .card-header.bg-transparent.border-primary
          %h5
            = Setting.smonth_ipts.label
        .card-body
          %table.table-bordered.day-pdt-table.w-100
            %tbody
              %tr
